@model WeightMeasurement.ViewModels.WeightManageViewModel

<div class="modal-dialog">
    <form id="form" autocomplete="off">
        <input name="id" type="hidden" value="@Model.Id" />
        <input name="subuserid" type="hidden" value="@Model.SubUserId" />
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Manage weight</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="name">Name</label><br />
                            @Model.SubUserName
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="name">Weight</label><br />
                            @if (Model.Id == 0)
                            {
                                <input id="weight" name="weight" />
                            }
                            else
                            {
                                <input id="weight" name="weight" value="@Model.Weight" />
                            }
                        </div>
                        
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="name">Date</label><br />
                            @if (Model.Id == 0)
                            {
                                <input id="date" name="date" />
                            }
                            else
                            {
                                <input id="date" name="date" value="@Model.AddedOn" />
                            }
                        </div>
                        
                    </div>
                </div>
                <div id="validate-error" class="text-danger"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
</div>