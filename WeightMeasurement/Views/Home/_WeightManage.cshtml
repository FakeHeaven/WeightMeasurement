@model WeightMeasurement.ViewModels.WeightManageViewModel

@{
    if(Model.Id == 0)
    {
        Model.SubUsers.Insert(0, new SelectListItem() { 
        
            Text = "",
            Value = ""

        });;
    }
 }

<div class="modal-dialog">
    <form id="form">
        <input name="id" type="hidden" value="@Model.Id" />

        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Manage weight</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="name">Name</label><br />
                            <select id="subuserid" name="subuserid" asp-items="Model.SubUsers"> </select>
                        </div>
                        <div id="validate-error" class="text-danger"></div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="name">Weight</label><br />
                            @if (Model.Id == 0)
                            {
                                <input id="weight" name="weight" />
                            }
                            else
                            {
                                <input id="weight" name="weight" value="@Model.Weight" />
                            }
                        </div>
                        <div id="validate-error" class="text-danger"></div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
</div>